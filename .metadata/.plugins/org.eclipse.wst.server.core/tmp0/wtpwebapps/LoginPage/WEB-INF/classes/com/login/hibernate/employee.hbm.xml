<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>

	<class name="com.login.hibernate.Employee"
		table="employee_table" schema="login_page">

		<id name="id" column="id" type="java.lang.Long">
			<generator class="increment" />
		</id>
			
		<property name="userName" type="java.lang.String"
			column="employee_name" length="255" />
			
			<property name="password" type="java.lang.String"
			column="password" length="255" />
			
			
		<property name="email" type="java.lang.String"
			column="email" length="255" />
			
		<property name="designation" type="java.lang.String"
			column="designation" length="255" />
			
		<property name="salary" type="java.lang.Double"
			column="salary" length="255" />
			
		<property name="number" type="java.lang.String"
			column="number" length="255" />	
	</class>
</hibernate-mapping>
