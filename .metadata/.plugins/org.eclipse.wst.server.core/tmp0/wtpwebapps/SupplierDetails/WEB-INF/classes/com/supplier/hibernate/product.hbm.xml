<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>

	<class name="com.supplier.hibernate.ProductDTO"
		table="product_data" schema="product_details">

		<id name="id" column="id" type="java.lang.Long">
			<generator class="increment" />
		</id>

		<property name="supplierName" type="java.lang.String"
			column="supplier_name" length="128" />

		<property name="productName" type="java.lang.String"
			column="product_name" length="128" />

		<property name="price" type="java.lang.Double" column="price"

			length="128" />

		<property name="quantity" type="java.lang.Double"
			column="quantity" length="128" />
	</class>
</hibernate-mapping>
